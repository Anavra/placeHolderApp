<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@color/semi_transparent_color"
    card_view:contentPadding="10dp"
    >

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/room_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="top|center"
            android:contentDescription="@string/icon_for_item"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_placeholder_boxes" />


    </FrameLayout>

    <TextView
        android:id="@+id/room_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textAlignment="center"
        android:textColor="@color/color_on_primary_variant"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>